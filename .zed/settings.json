{
  "lsp": {
    "eslint": {
      "settings": {
        "workingDirectories": ["."],
        "validate": ["javascript", "typescript"]
      }
    },
    "typescript-language-server": {
      "settings": {
        "suggest": {
          "autoImports": true,
          "completeFunctionCalls": false,
          "paths": true
        }
      }
    }
  },
  "languages": {
    "TypeScript": {
      "language_servers": [
        "typescript-language-server",
        "eslint",
        "!deno",
        "!vtsls"
      ],
      "formatter": "prettier",
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      }
    },
    "TSX": {
      "language_servers": [
        "typescript-language-server",
        "eslint",
        "!deno",
        "!vtsls"
      ],
      "formatter": "prettier",
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      }
    },
    "JavaScript": {
      "language_servers": [
        "typescript-language-server",
        "eslint",
        "!deno",
        "!vtsls"
      ],
      "formatter": "prettier",
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      }
    },
    "JSON": {
      "formatter": "prettier"
    },
    "JSONC": {
      "formatter": "prettier"
    },
    "Markdown": {
      "formatter": "prettier"
    },
    "YAML": {
      "formatter": "prettier"
    }
  },
  "auto_indent_on_paste": true,
  "format_on_save": "on",
  "file_scan_exclusions": [
    "**/.git",
    "**/.DS_Store",
    "**/.vscode/extensions",
    "**/npm",
    "**/target",
    "**/dist",
    "**/coverage"
  ]
}
